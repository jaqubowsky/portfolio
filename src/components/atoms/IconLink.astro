---

import { Link } from '@components/atoms';
import { cn } from '@utils/index';
import { Icon } from 'astro-icon/components';

type Props = {
  class?: string;
  size?: number;
  name: string;
  href: string;
} & JSX.IntrinsicElements['a'];

const {class: className, size, name, href, ...rest} = Astro.props

---

<Link class={cn("cursor-pointer", className)} {...rest}>
  <Icon name={name} size={size}/>
</Link>
