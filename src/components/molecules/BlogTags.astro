---
import { Flex, Link } from "@components/atoms";

const {frontmatter} = Astro.props;
---

  {frontmatter.tags && (
    <Flex class="flex-wrap gap-2 items-start justify-start mt-4">
      {frontmatter.tags.map((tag: string) => (
        <Link class="decoration-wavy underline" key={tag}>#{tag}</Link>
      ))}
    </Flex>
  )}
