---
import type { JSX } from 'astro/jsx-runtime';

type HeadingLevel = 1 | 2 | 3 | 4 | 5 | 6;

type Props = {
  level?: HeadingLevel;
} & JSX.IntrinsicElements['h1'];

const { class: className, level = 1 } = Astro.props;

const HeadingTag = `h${level}`
---

<HeadingTag class:list={["font-bold text-primary dark:text-secondary", className]}>
  <slot />
</HeadingTag>
